# Enable status bar
set-option -g status on
set -g status-left ''

# Set default bg/fg settings for status bar
set-option -g status-style bright,bg=#252837,fg=default

set-window-option -g window-status-current-style fg=#82AAFF,bg=default,bright

# Right Status Bar: [Session Name][Date][Time]
set -g status-right "%d-%b-%Y"

set -g message-style bg='#292D3E',fg=#959DCB,bold
set -g message-command-style bg='#292D3E',bold

# Set the inactive window color and style
# set -g window-status-style fg=#899ca1,bg=default
set -g window-status-format ' #I #W '

# Set the active window color and style
set -g window-status-current-style fg=black,bg=#959DCB
set -g window-status-current-format ' #I #W '

# window modes color (e.g. choosing window: <prefix>w / escape mode)
setw -g mode-style bg=#959DCB,fg=#292D3E

# pane border colors
set-option -g pane-border-style fg=colour240,bg=default   # inactive pane border: gray
set-option -g pane-active-border-style fg=colour240,bg=default  # active pane border: green

